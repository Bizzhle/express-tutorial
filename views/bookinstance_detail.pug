extends layout

block content

    h1(class="text-3xl my-2") ID: #{bookinstance._id}

    p(class="leading-8") #[strong Title: ]
        a(href=bookinstance.book.url) #{bookinstance.book.title}
    p(class="leading-8") #[strong Imprint: ] #{bookinstance.imprint}

    p(class="leading-8") #[strong Status:]
        if bookinstance.status=='Available'
            span.text-success #{bookinstance.status}
        else if bookinstance.status=='Maintenance'
            span.text-danger #{bookinstance.status}
        else
            span.text-warning #{bookinstance.status}

    if bookinstance.status!='Available'
        p #[strong Due back:] #{bookinstance.due_back_formatted}

    hr

    p(class="mt-5")
        a(href=bookinstance.url+'/delete' class="text-blue-600") Delete BookInstance

    p(class="mt-5")
        a(href=bookinstance.url+'/update' class="text-blue-600") Update BookInstance