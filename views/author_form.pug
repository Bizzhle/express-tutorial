extends layout 

block content 
    h1(class='text-3xl font-bold mb-4')=title

    form(method='POST' action="")
        div.form-group
            label(for='first_name') First Name:
            input#first_name.form-control(type='text', placeholder='Enter your first name' name="first_name" value=(undefined===author ? '' : author.first_name), required='true' )
            label(for='family_name') Last Name:
            input#family_name.form-control(type='text', placeholder='Enter your Last name' name="family_name" value=(undefined===author ? '' : author.family_name), required='true' )
        div.form-group
            label(for="date_of_birth") Date of birth:
            input#date_of_birth.form-control(type="date", name='date_of_birth' placeholder='yyyy/mm/dd' value=(undefined===author ? '' : author.date_of_birth_formatted))
            label(for="date_of_death") Date of death: 
            input#date_of_death.form-control(type="date", name='date_of_death' placeholder='yyyy/mm/dd' value=(undefined===author ? '' : author.date_of_death_formatted))


        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li(class="text-red-700 font-medium mt-2")!= error.msg